{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clear Logs",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "/Users/maxludden/dev/py/maxgradient/tasks/clear.py"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/tasks/clear.py"
        ],
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 0
        }
      }
    },
    {
      "label": "Build Docs",
      "type": "shell",
      "command": "mkdocs",
      "args": [
        "build"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "docs",
        "pattern": {
          "regexp": "^.*$",
          "location": 2,
          "message": 0
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "Serve Docs",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "mkdocs",
        "serve"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "docs",
        "pattern": {
          "regexp": "^.*$",
          "location": 2,
          "message": 0
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "Run Mypy",
      "type": "shell",
      "command": "python",
      "args": [
        "/Users/maxludden/dev/py/MaxGradient/tasks/mypy.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Clear Console",
      "type": "shell",
      "command": "clear",
      "args": [],
      "isBackground": false
    },
    {
      "type": "script",
      "scriptType": "python",
      "path": "maxgradient/",
      "fileName": "gradient.py",
      "scriptFile": true,
      "script": "py",
      "target": "py",
      "uri": {
        "$mid": 1,
        "fsPath": "/Users/maxludden/dev/py/MaxGradient/maxgradient/gradient.py",
        "external": "file:///Users/maxludden/dev/py/MaxGradient/maxgradient/gradient.py",
        "path": "/Users/maxludden/dev/py/MaxGradient/maxgradient/gradient.py",
        "scheme": "file"
      },
      "takesArgs": false,
      "problemMatcher": [
        "$msCompile"
      ],
      "label": "python: gradient.py"
    }
  ]
}
